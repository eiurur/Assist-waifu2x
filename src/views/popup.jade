doctype html
html(lang="ja")
  headmain
    meta(charset="UTF-8")
    link(rel="stylesheet", type="text/css", href="../../css/vendors/lib.min.css")
    link(rel="stylesheet", type="text/css", href="../../css/app.min.css")
    meta(name="viewport", content="width=device-width,initial-scale=1.0")
  body#main(style="min-width:640px;")
    nav.navbar.navbar-default.navbar-static-top
      .container-fluid
        .navbar-header
          a.navbar-brand(href='#') Assist-waifu2x
          form.navbar-form.navbar-right
            .form-group
              select.form-control(name="lang")
                option ja
                option en
                option ru

    .container
      form.form-horizontal
        .form-group
          label.control-label.col-xs-4(data-i18n="style.style")
          .col-xs-8
            label.radio-inline
              input(type='radio', name='style', value="art", checked)
              span(data-i18n="style.art")
            label.radio-inline
              input(type='radio', name='style', value="photo")
              span(data-i18n="style.photo")

    .container
      form.form-horizontal
        .form-group
          label.control-label.col-xs-4(data-i18n="noize.noize")
          .col-xs-8
            label.radio-inline
              input(type='radio', name='noise', value="-1")
              span(data-i18n="noize.none")
            label.radio-inline
              input(type='radio', name='noise', value="0")
              span(data-i18n="noize.low")
            label.radio-inline
              input(type='radio', name='noise', value="1")
              span(data-i18n="noize.medium")
            label.radio-inline
              input(type='radio', name='noise', value="2", checked)
              span(data-i18n="noize.high")
            label.radio-inline
              input(type='radio', name='noise', value="3")
              span(data-i18n="noize.highest")

      form.form-horizontal
        .form-group
          label.control-label.col-xs-4(data-i18n="upscaling.upscaling")
          .col-xs-8
            label.radio-inline
              input(type='radio', name='scale', value="-1")
              span(data-i18n="upscaling.none")
            label.radio-inline
              input(type='radio', name='scale', value="1")
              span(data-i18n="upscaling.1_6x")
            label.radio-inline
              input(type='radio', name='scale', value="2", checked)
              span(data-i18n="upscaling.2x")

      form.form-horizontal
        .form-group
          .col-xs-12
            .checkbox
              label
                input.allowable-download-original-size(type="checkbox")
                span(data-i18n="options.download")

      form.form-horizontal
        .form-group
          .col-xs-12
            .checkbox
              label
                input.allowable-only-show-expanded-image(type="checkbox")
                span(data-i18n="options.tab")

    script(src='../../js/vendors/lib.min.js')
    script(src='../../js/popup.js')
