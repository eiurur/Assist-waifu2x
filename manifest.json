{
  "manifest_version": 2,
  "name": "Assist-waifu2x",
  "description": "Chrome Extension to help the use of waifu2x.",
  "version": "0.5.0",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "contextMenus",
    "notifications"
  ],
  "browser_action": {
     "default_icon": {
        "19": "build/images/icon19.png",
        "38": "build/images/icon38.png"
     },
     "default_title": "Assist-waifu2x",
     "default_popup": "build/views/views/popup.html"
  },
  "background": {
     "persistent": false,
     "scripts": [ "build/js/vendors/lib.js", "build/js/background.js" ],
     "//": [ "build/js/vendors/lib.min.js", "build/js/background.min.js" ]
  },
  "web_accessible_resources": [
    "bower_components/jquery/dist/jquery.min.map"
  ],
  "icons": {
    "16": "build/images/icon16.png",
    "48": "build/images/icon48.png",
    "128": "build/images/icon128.png"
  }
}
